{
  "name": "battle-city-server",
  "version": "1.0.0",
  "description": " Battle-City 伺服器：用于分发 State 到各个 Client",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "cross-env NODE_ENV=development nodemon",
    "start:debug": "cross-env NODE_ENV=development nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lotteryjs/battle-city-server.git"
  },
  "author": "kirk.wang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lotteryjs/battle-city-server/issues"
  },
  "homepage": "https://github.com/lotteryjs/battle-city-server#readme",
  "dependencies": {
    "colyseus": "^0.9.19",
    "kcors": "^2.2.2",
    "koa": "^2.6.2",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/kcors": "^2.2.3",
    "@types/koa": "^2.0.46",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.33",
    "@types/koa-static": "^4.0.0",
    "@types/node": "^10.12.5",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.1",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
